{% extends "RobiskApplicationBundle::Common/layout.html.twig" %}

{% block robisk_application_content %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ 'user.login.title'|trans }}</h1>

                    <form class="form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
                        {% if error %}
                            <div class="form-group">
                                <div class="col-md-3 label-warning">
                                    <i class="fa fa-fw fa-warning"></i>
                                    {{ error.message }}
                                </div>
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <label class="col-md-1 control-label">
                                <i class="glyphicon glyphicon-user"></i>
                            </label>
                            <div class="col-md-2">
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'user.login.username'|trans }}" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-1 control-label">
                                <i class="glyphicon glyphicon-lock"></i>
                            </label>
                            <div class="col-md-2">
                                <input class="form-control" type="password" id="password" name="_password" placeholder="{{ 'user.login.password'|trans }}" />
                            </div>
                        </div>

                        <div class="form-group">
                            <a href="{{ path('forgotten_password') }}" class="col-md-3 btn btn-link">{{ 'user.login.reset'|trans }}</a>
                        </div>

                        <div class="form-group">
                            <button class="col-md-4 btn btn-success" type="submit">{{ 'user.login.submit'|trans }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock robisk_application_content %}
