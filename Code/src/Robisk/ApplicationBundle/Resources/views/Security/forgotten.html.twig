{% extends "RobiskApplicationBundle::Common/layout.html.twig" %}

{% block robisk_application_content %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ 'user.login.titleReset'|trans }}</h1>

                    <form class="form-horizontal" role="form" method="post">

                      <div class="form-group">
                          <div>
                              {{ form_errors(form.mail) }}
                          </div>
                          <div class="col-md-1 control-label">
                              {{ form_label(form.mail, 'user.login.mail'|trans) }}
                          </div>
                          <div class="col-md-3">
                              {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                          </div>
                      </div>

                      <div class="form-group">
                        <div class="col-md-1"></div>
                        <button class="col-md-3 btn btn-success" type="submit">
                          <i class="fa fa-send"></i>
                          {{ 'user.login.mailReset'|trans }}</button>
                       </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock robisk_application_content %}
