{% extends "RobiskApplicationBundle::Common/layout.html.twig" %}

{% block robisk_application_content %}
	{% include 'RobiskApplicationBundle:Common:flash_messenger.html.twig' %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    {% if is_granted('ROLE_USER') %}

                        <h1 class="page-header">{{ 'announcements.title'|trans }}</h1>

                        <ol class="breadcrumb">
                            <li>
                                <a href="{{ path('route_subjects') }}">
                                    <i class="fa fa-fw fa-book"></i>
                                    {{ 'subjects.title'|trans }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('route_subject_view',
                                {'id': subject.id}) }}">
                                    <i class="fa fa-fw fa-th-large"></i>
                                    {{ subject.name }}
                                </a>
                            </li>
                            <li class="active">
                                <i class="fa fa-fw fa-envelope"></i>
                                {{ 'announcements.title'|trans }}
                            </li>
                        </ol>

                        {% if announcements|length > 0 %}
                            {% for announcement in announcements %}
                                <div class="col-md-12">
                                    <h3 class="col-md-12">{{ announcement.title }}</h3>
                                    <div class="col-md-12">
                                        <span class="small">
                                            {{ 'admin.subjects.announcements.created'|trans }}: {{ announcement.created|date("d.m.Y H:i:s") }}
                                        </span>
                                        {% if announcement.created != announcement.updated %}
                                            <span class="small">
                                                {{ 'admin.subjects.announcements.updated'|trans }}: {{ announcement.updated|date("d.m.Y H:i:s") }} ({{ announcement.updatesCount }}x)
                                            </span>
                                        {% endif %}
                                    </div>
                                    <div class="col-md-12">
                                        {{ announcement.content }}
                                    </div>
                                </div>
                            {% endfor %}

                        {% else %}
                            <p class="empty">{{ 'admin.subjects.announcements.empty'|trans }}</p>
                        {% endif %}

                    {% else %}
                        <div class="title">{{ 'permission.warning.title'|trans }}</div>
                        <p class="empty">{{ 'permission.denied.admin'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock robisk_application_content %}