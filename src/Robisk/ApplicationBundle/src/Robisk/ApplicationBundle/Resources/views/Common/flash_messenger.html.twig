{% set fm = app.session.flashbag.all() %}

{% if  fm|length > 0 %}
    {% for flashType,flashMessages in fm %}
        {% for flashMessage in flashMessages %}
        <div class="alert alert-block {% if flashType == 'success' %}alert-success{% elseif flashType == 'error' %}alert-error{% elseif flashType == 'warning' %}{% else %}alert-info{% endif %}">
            {{ flashMessage|raw }}
            <button type="button" class="close" data-dismiss="alert" />
        </div>
        {% endfor %}
    {% endfor %}
{% endif %}