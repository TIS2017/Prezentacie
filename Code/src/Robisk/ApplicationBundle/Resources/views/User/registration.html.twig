{% extends "RobiskApplicationBundle::Common/layout.html.twig" %}

{% block robisk_application_content %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ 'user.register.title'|trans }}</h1>

                    <form class="form-horizontal" role="form" action="{{ url }}" method="post">
                        <div class="form-group">
                            <div>
                                {{ form_errors(form.user.firstName) }}
                            </div>
                            <div class="col-md-2 control-label">
                                {{ form_label(form.user.firstName, 'user.register.firstName'|trans) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.user.firstName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                {{ form_errors(form.user.lastName) }}
                            </div>
                            <div class="col-md-2 control-label">
                                {{ form_label(form.user.lastName, 'user.register.lastName'|trans) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.user.lastName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                {{ form_errors(form.user.email) }}
                            </div>
                            <div class="col-md-2 control-label">
                                {{ form_label(form.user.email, 'user.register.email'|trans) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.user.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                {{ form_errors(form.user.username) }}
                            </div>
                            <div class="col-md-2 control-label">
                                {{ form_label(form.user.username, 'user.register.username'|trans) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.user.username, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                {{ form_errors(form.user.password.password) }}
                            </div>
                            <div class="col-md-2 control-label">
                                {{ form_label(form.user.password.password, 'user.register.password'|trans) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.user.password.password, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                {{ form_errors(form.user.password.confirm) }}
                            </div>
                            <div class="col-md-2 control-label">
                                {{ form_label(form.user.password.confirm, 'user.register.password-repeat'|trans) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.user.password.confirm, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                {{ form_errors(form.terms) }}
                            </div>
                            <div class="col-md-2 control-label">
                                {{ form_label(form.terms, 'user.register.terms'|trans) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_widget(form.terms, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="col-md-3 col-md-offset-2 btn btn-success" type="submit">{{ 'user.register.submit'|trans }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock robisk_application_content %}